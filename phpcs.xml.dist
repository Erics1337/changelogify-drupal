<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="changelogify">
  <description>PHP CodeSniffer declaration for Changelogify.</description>
  <file>.</file>
  <arg name="extensions" value="php,module,inc,install,test,profile,theme,info,txt,md,yml"/>
  <exclude-pattern>vendor</exclude-pattern>
  <exclude-pattern>node_modules</exclude-pattern>
  <!-- Exclude third-party libraries if any -->
  <rule ref="Drupal"/>
  <rule ref="DrupalPractice"/>
</ruleset>
