{
    "name": "drupal/changelogify",
    "description": "Automatically collect site changes, group them into releases, and publish a public changelog.",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/changelogify",
    "support": {
        "issues": "https://www.drupal.org/project/issues/changelogify"
    },
    "require": {
        "drupal/core": "^10.3 || ^11"
    },
    "require-dev": {
        "drupal/core-dev": "^10.3 || ^11"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\changelogify\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test:changelogify": "vendor/bin/phpunit tests/src/Unit"
    }
}
